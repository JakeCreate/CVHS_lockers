<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

<body>
    <div class="register-container container">
          <div class="row">
            <div class="iphone span3">
          </div>
              <div class="register span6">

                  <%= form_for(@cvhs_locker) do |f| %> 
                  <% if @cvhs_locker.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@cvhs_locker.errors.count, "error") %> prohibited this cvhs_locker from being saved:</h2>

                      <ul>
                      <% @cvhs_locker.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <h2><span class="glyphicon glyphicon-pencil grey"></span>  REGISTER FOR A <span class="blue">
                      <strong> LOCKER</strong></span></h2>
                  <div class="field">
                    <%= f.label :name1, "Student 1 Name" %><br>
                    <%= f.text_field :name1, :required => true %>
                  </div>
                  <div class="field">
                    <%= f.label :name2, "Student 2 Name" %><br> 
                    <%= f.text_field :name2, :required => true  %>
                  </div>
                  <div class="field">
                    <%= f.label :studentID1, "Student 1 ID" %><br>
                    <%= f.text_field :studentID1, :required => true  %>
                  </div>
                  <div class="field">
                    <%= f.label :studentID2, "Student 2 ID" %><br>
                    <%= f.text_field :studentID2, :required => true  %>
                  </div>
                  <div class="field">
                    <%= f.label :number, "Locker Preference" %><br>
                    <%= f.text_field :number, :required => true  %>
                  </div>
                  <div class="actions">
                    <%= f.submit %>
                  </div>
                  <% end %>

              </div>
          </div>
      </div>
</body>
