<body>
    <div class="register-container container main">
          <div class="row">
            <div class="iphone span3">
          </div>
            <div class="register span6">
                <%= form_tag("/admin_login", method: "get") do%>
                  <h2>LOGIN AS<span class="blue"> <strong> ADMIN</strong></span></h2>

                    <%= text_field_tag :username, nil, :required => true, :class => 'full', :placeholder => "Username"%>
                    <%= password_field_tag :password, nil,  :required => true, :class => 'full', :placeholder => "Password"%>

                  <button id="register-button">LOGIN</button>
                <% end %>

            </div>
          </div>
    </div>
</body>
